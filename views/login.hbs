{{> header}}
<section>
  <div class="container">
    <div class="row">
        <div class="col s6">
          <h1 class="header center black-text">Login</h1>
          <h3 class="center black-text"> or <a href="/register">register</a> an account</h3>
          <form class="form login-form">
            <div class="form-group">
              <label for="email-login">email:</label>
              <input class="form-input" type="text" id="email-login" />
            </div>
            <div class="form-group">
              <label for="password-login">password:</label>
              <input class="form-input" type="password" id="password-login" />
            </div>
            <div class="form-group">
              <button class="btn btn-primary" type="submit">login</button>
            </div>
          </form>
        </div>
        <div class="col s6">
          <img src="/images/backgrounds/loginpage-bg.png">
      </div>
    </div>
  </div>

  <script src="./js/login.js"></script>
</section>
{{> footer}}